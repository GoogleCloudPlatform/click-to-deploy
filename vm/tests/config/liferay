## format 'user1\|user2\|user3'
export liferay_admin_password="$(cat /dev/urandom | tr -dc "a-zA-Z0-9" | fold -w 12 | head -n 1 | tr -d "\n")"
export liferay_db_password="$(cat /dev/urandom | tr -dc "a-zA-Z0-9" | fold -w 12 | head -n 1 | tr -d "\n")"
export root_db_password="$(cat /dev/urandom | tr -dc "a-zA-Z0-9" | fold -w 12 | head -n 1 | tr -d "\n")"
export password="${root_db_password}"

/opt/c2d/scripts/01-mysql
/opt/c2d/scripts/02-mysql8-root-localhost-password-setup
/opt/c2d/scripts/03-liferay-db-setup
/opt/c2d/scripts/04-liferay-setup
