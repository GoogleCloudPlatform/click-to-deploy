source /opt/c2d/c2d-utils || exit 1

readonly db_username="dolibarr"
readonly db_password="$(get_attribute_value "dolibarr-db-password")"

mysql -u root -e "CREATE USER '${db_username}'@'localhost' IDENTIFIED BY '${db_password}';"
mysql -u root -e "GRANT ALL PRIVILEGES ON dolibarr.* TO '${db_username}'@'localhost' IDENTIFIED BY '${db_password}'";
mysql -u root -e "FLUSH PRIVILEGES"
